{
    "compilerOptions": {
      "skipLibCheck": true,
      "baseUrl": "./",
      "rootDir": "./",
      "target": "es6",
      "lib": ["es6", "dom"],
      "types": ["cypress", "node"],
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowJs": true,
      "noEmit": true,
      "allowImportingTsExtensions": true
    },
    "include": [
      "cypress/e2e/features/**/*.cy.ts",
      "cypress/support/*.ts",
      "cypress/e2e/features/*.ts",
      "*.ts"
    ],
    "exclude": ["node_modules/", "cypress-mochawesome-reporter/"],
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveValueImports": false
}